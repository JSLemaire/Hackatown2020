<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button"
        android:forceDarkAllowed="false"
        android:text="map"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Modifier l'itinéraire"
            android:background="@drawable/itinerary_button"
            android:textSize="12pt"
            android:textColor="#ffffff"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TextViewDepart"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="false"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Départ : "
                android:textSize="12pt"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <EditText
                android:id="@+id/editTextDepart"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentTop="false"
                android:ems="10"
                android:textSize="12pt"
                android:inputType="textPersonName"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TextViewArrive"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="false"
                android:ems="10"
                android:textSize="12pt"
                android:inputType="textPersonName"
                android:text="Arrivée : "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <EditText
                android:id="@+id/editTextArrive"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentTop="false"
                android:ems="10"
                android:textSize="12pt"
                android:inputType="textPersonName"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TextViewDate"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="false"
                android:ems="10"
                android:textSize="10pt"
                android:inputType="textPersonName"
                android:text="Date de départ : "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentTop="false"
                android:ems="10"
                android:textSize="12pt"
                android:inputType="textPersonName"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/TextViewHour"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="false"
                android:ems="10"
                android:textSize="10pt"
                android:inputType="textPersonName"
                android:text="Heure : "
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <EditText
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentTop="false"
                android:ems="10"
                android:textSize="12pt"
                android:inputType="textPersonName"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>